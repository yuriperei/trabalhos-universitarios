@model IEnumerable<MustDo.Presentation.WebMVC.Models.CategoriaViewModel>

@{
    ViewBag.Title = "Lista de categorias";
}

<h2>Lista de categorias</h2>

<ul class="nav nav-pills">
    <li role="presentation" class="active">@Html.ActionLink("Nova categoria", "Create")</li>
</ul>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            <ul class="nav nav-pills">
                <li role="presentation" class="alert-warning">@Html.ActionLink("Editar", "Edit", new { id = item.CategoriaId })</li>
                <li role="presentation" class="alert-info">@Html.ActionLink("Detalhar", "Details", new { id = item.CategoriaId })</li>
                <li role="presentation" class="alert-danger">@Html.ActionLink("Deletar", "Delete", new { id = item.CategoriaId })</li>
            </ul>
        </td>
    </tr>
}

</table>
